@{
    ViewBag.Title = "ProductView";
}
@using Capstone.Models;


<div class="main">
    <div class="content">
        <div class="content_top">
            <div class="heading">
                <h3>Product Preview</h3>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            <div class="cont-desc span_1_of_2">
                <div class="product-details">
                    <div class="grid images_3_of_2">
                        <div id="container">
                            <div id="products_example">
                                <div id="products">
                                   @*this will need to return from the database in a for loop *@
                                    <img src='@Url.Content(ViewBag.productImage)' />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="desc span_3_of_2">
                        <h2>@ViewBag.productName</h2>
                        <p>@ViewBag.productDescription</p>
                        <div class="price">
                            <p>Price: <span>@ViewBag.productPrice</span></p>
                        </div>
                        <div class="available">
                            <p>Available Option :</p>
                            <ul>
                                <li>Quanity:
                                    <select name="quantity" class="form-control" required>
                                        <option value="" selected="selected">0</option>
                                        @for (var i = 1; i < ViewBag.quantity; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </li>
                            </ul>
                        </div>
                        <div class="share-desc">
                            <div class="button"><h4>@Html.ActionLink("Add To Cart", "OrderNow", "ShoppingCart", new { product_id = ViewBag.product_ID, category_id = ViewBag.category_ID }, null)</h4></div>
                            <div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="product_desc">
                        <div id="horizontalTab">
                            <h3>Product Details</h3>
                            <div class="clear"></div>
                            <div class="resp-tabs-container">
