@{
    Layout = null;
}
@using Capstone.Models
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cart</title>
</head>
<body>
    <table>
     <tr>
         <th>ID</th>
         <th>Name</th>
         <th>Price</th>
         <th>Quantity</th>
         <th>Sub total</th>
     </tr>
        @foreach(Item item in (List<Item>) Session["cart"])
        {
            <tr>
                <td>@item.Pr.product_ID</td>
                <td>@item.Pr.name</td>
                <td>@item.Pr.price</td>
                <td>@item.Quantity</td>
                <td>@(item.Pr.price * item.Quantity)</td>
            </tr>
        }
    </table>
</body>
</html>
