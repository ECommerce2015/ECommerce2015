@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
}
@using (Html.BeginForm("Account", "Customer", FormMethod.Post, new { id = "customerForm" }))
{
    <div id="page-wrapper">
        <div class="container-fluid">
            <h1>Sign Up</h1>
            <div class="form-group">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-xs-3" for="inputFirstname">First Name:</label>
                        <div class="col-xs-9">
                            <input type="text" name="firstName" class="form-control" id="inputFirstaddress" placeholder="First Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-xs-3" for="inputLastName">Last Name:</label>
                        <div class="col-xs-9">
                            <input type="text" name="lastName" class="form-control" id="inputLastname" placeholder="Last Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-xs-3" for="inputEmail">Email:</label>
                        <div class="col-xs-9">
                            <input type="email" name="email" class="form-control" id="email" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-xs-3" for="inputPhone">Phone:</label>
                        <div class="col-xs-9">
                            <input type="text" name="phone" class="form-control" id="state" placeholder="Phone">
                        </div>
                    </div>
                    <br>
                    <div class="form-group">
                        <div class="col-xs-offset-3 col-xs-9">
                            <input type="submit" class="btn btn-primary" value="Submit">
                            <input type="reset" class="btn btn-default" value="Reset">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}