@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_AdminLayoutDashBoard.cshtml";
}

<h2>Orders</h2>
<div id="page-wrapper">
    <div class="container-fluid">
        <h1>Sign Up</h1>
        <div class="form-group">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-xs-3" for="inputCustomername">Customer Name:</label>
                    <div class="col-xs-9">
                        <input type="text" name="customer_ID" class="form-control" id="inputCustomername" placeholder="Customer Name">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-3" for="inputShippingaddress">Shipping Address:</label>
                    <div class="col-xs-9">
                        <input type="text" name="shippingAddress_ID" class="form-control" id="inputshipping" placeholder="Shipping Address">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-3" for="inputCustomerbilling">Customer Billing:</label>
                    <div class="col-xs-9">
                        <input type="text" name="customerBilling_ID" class="form-control" id="inputcustomerbilling" placeholder="Customer Billing">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-3" for="inputOrderDetails">Order Details:</label>
                    <div class="col-xs-9">
                        <input type="text" name="orderDetails_ID" class="form-control" id="inputordersdetails" placeholder="Order Details">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-3" for="inputShippingMethod">Shipping Method:</label>
                    <div class="col-xs-9">
                        <input type="text" name="shippingMethod_ID" class="form-control" id="inputshippingmethod" placeholder="Shippping Method">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-3" for="inputOrderDate">Order Date:</label>
                    <div class="col-xs-9">
                        <input type="date" name="orderDate" class="form-control" id="inputorderdate" placeholder="Order Date">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-3" for="inputTax">Tax:</label>
                    <div class="col-xs-9">
                        <input type="text" name="tax" class="form-control" id="inputtax" placeholder="Tax">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-3" for="inputgrandTotal">Tax:</label>
                    <div class="col-xs-9">
                        <input type="text" name="grandTotal" class="form-control" id="inputgrandtotal" placeholder="GrandTotal">
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <div class="col-xs-offset-3 col-xs-9">
                        <input type="submit" class="btn btn-primary" value="Submit">
                        <input type="reset" class="btn btn-default" value="Reset">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>